// https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    // ---------------- TELEMETRY ----------------
    // use defaults: "auto_update": true,
    "features": {
        "inline_completion_provider": "zed",
        "copilot": false
    },
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    // ---------------- VISUAL ----------------
    "ui_font_family": "Noto Sans Mono",
    "buffer_font_family": "Noto Sans Mono",
    "theme": {
        "mode": "system",
        "light": "Atelier Cave Light",
        "dark": "Catppuccin Macchiato"
    },
    "project_panel": {
        "button": true,
        "dock": "left",
        "git_status": true
    },
    "scrollbar": {
        "show": "system",
        "cursors": true,
        "git_diff": true,
        "search_results": true,
        "selected_symbol": true,
        "diagnostics": "all",
        "axes": { "horizontal": false }
    },
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": false
    },
    "tabs": {
        "close_position": "right",
        "file_icons": false,
        "git_status": true
    },
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false,
        "selections_menu": false
    },
    "inlay_hints": {
        "enabled": true,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true,
        "edit_debounce_ms": 700,
        "scroll_debounce_ms": 50
    },
    // ---------------- BEHAVIOURAL ----------------
    "confirm_quit": true,
    "base_keymap": "JetBrains",
    "seed_search_query_from_cursor": "selection",
    "middle_click_paste": false,
    "vertical_scroll_margin": 0,
    "restore_on_startup": "last_session",
    "session":  { "restore_unsaved_buffers": true },
    "autosave": { "after_delay": { "milliseconds": 60000 } },
    // ---------------- INDENTATION ----------------
    "indent_guides": {
        "enabled": true,
        "line_width": 1,
        "active_line_width": 2,
        "coloring": "fixed",
        "background_coloring": "disabled"
    },
    "preferred_line_length": 120,
    "wrap_guides": [ 120 ],
    "hard_tabs": false,
    "tab_size": 4,
    // ---------------- EDITOR SETTINGS ----------------
    "notification_panel":  { "button": false },
    "chat_panel":          { "dock": "right" },
    "collaboration_panel": { "dock": "right" },
    "outline_panel":       { "dock": "right" },
    "assistant": {
        "enabled": true,
        "button": true,
        "version": "2",
        "dock": "right",
        "enable_experimental_live_diffs": true,
        "default_model": { "provider": "anthropic", "model": "claude-3-opus-latest" },
        "inline_alternatives": [ { "provider": "anthropic", "model": "claude-3-5-haiku-latest" } ]
    },
    "language_models": { "ollama": { "low_speed_timeout_in_seconds": 120 } },
    "git_status": true,
    "git": {
        "git_gutter": "tracked_files",
        "inline_blame": { "enabled": true, "show_commit_summary": true }
    },
    "enable_language_server": true,
    "ensure_final_newline_on_save": null, // disabled for edge cases;
    "format_on_save": "off",
    "formatter": "prettier",
    "use_autoclose": true,
    "soft_wrap": "none",
    "always_treat_brackets_as_autoclosed": true,
    "show_whitespaces": "selection",
    "show_completions_on_input": true,
    "show_completion_documentation": true,
    "show_inline_completions": true,
    "auto_signature_help": true,
    "inline_completions": { "disabled_globs": [ ".env" ] },
    // ---------------- TERMINAL ----------------
    "terminal": {
        "button": true,
        "copy_on_select": false,
        "cursor_shape": "bar",
        "shell": { "program": "fish" },
        "working_directory": "current_project_directory",
        "toolbar": { "title": true, "breadcrumbs": false },
        "detect_venv": "off"
    }
}
